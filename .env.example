# =============================================================================
# ARTHROKINETIX ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env in both frontend and backend directories
# and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development, use: mongodb://localhost:27017/arthrokinetix
# For production, use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/arthrokinetix

# =============================================================================
# AI SERVICES
# =============================================================================
# Claude AI (Anthropic) API Key for emotional analysis
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Admin dashboard access password
ADMIN_PASSWORD=your_secure_admin_password

# JWT Secret for token signing (generate a random 256-bit key)
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# WEB3 INTEGRATION
# =============================================================================
# WalletConnect Project ID for Web3 wallet connections
# Get your project ID from: https://walletconnect.org/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# Ethereum network configuration (mainnet, goerli, sepolia)
NEXT_PUBLIC_ETHEREUM_NETWORK=mainnet

# NFT Contract addresses for verification
NEXT_PUBLIC_NFT_CONTRACT_ERC721=your_erc721_contract_address
NEXT_PUBLIC_NFT_CONTRACT_ERC1155=your_erc1155_contract_address

# =============================================================================
# EMAIL & NEWSLETTER SERVICES
# =============================================================================
# Supabase configuration for newsletter management
# Get your credentials from: https://supabase.com/
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# SendGrid API Key for email notifications (optional)
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment setting
NODE_ENV=production

# Backend API URL (for frontend to connect to backend)
REACT_APP_BACKEND_URL=https://your-backend-domain.vercel.app

# Frontend URL (for CORS and callback configuration)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# IMAGE & FILE STORAGE (Optional)
# =============================================================================
# AWS S3 configuration for artwork storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable debug logging
DEBUG=false

# Port configuration (usually set by hosting provider)
PORT=8001

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis URL for caching (optional, for production scaling)
REDIS_URL=redis://localhost:6379

# Cache duration in seconds
CACHE_DURATION=3600